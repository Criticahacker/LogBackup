{
    "Paths": {
        "Input": "C:\\Logs\\Writer",
        "Output": "D:\\Logs\\Output",
        "State": "D:\\Logs\\state.json"
    },
    "Worker": {
        "IntervalSeconds": 15,
        "MaxParallelFiles": 4
    },
    "Processing": {
        "MaskingRules": {
            "Full": [ "password", "cvv", "pin" ],
            "Partial": {
                "userEmail": {
                    "VisibleStart": 1,
                    "VisibleEnd": 2
                },
                "creditCardNumber": {
                    "VisibleStart": 0,
                    "VisibleEnd": 4
                },
                "phoneNumber": {
                    "VisibleStart": 2,
                    "VisibleEnd": 2
                }
            }
        },
        "SkipFields": [ "sessionId" ],
        "SkipIfContains": [ "internalOnly" ],
        "LogLevelNormalization": {
            "FieldName": "level",
            "Mappings": {
                "err": "Error",
                "error": "Error",
                "war": "Warning",
                "warn": "Warning",
                "warning": "Warning",
                "info": "Information",
                "information": "Information",
                "dbg": "Debug",
                "debug": "Debug"
            }
        }
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "D:\\Logs\\AppLogs\\app.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7
                }
            }
        ]
    }
}